<div class="col-md-4 col-sm-6">
	<div class="card-container manual-flip">
    	<div class="card">
			<div class="front">
				<div class="header">
					<h5 class="motto">{{location}}</h5>
				</div>
				<div class="content">
					<dl class="row" style="display:inline">
						<h4 class="text-center">Stock Level</h4>
						<dt class="col-sm-4">Owner</dt>
						<dd class="col-sm-10">{{stockLevel.owner}}</dd>
						<dt class="col-sm-10">Supplier Location</dt>
						<dd class="col-sm-12">{{stockLevel.supplierLocation}}</dd>

						<div class="stats-container">
							<div class="stats">
								<h4>{{stockLevel.safetyLevel}}</h4>
								<p>Safety Level (EA)</p>
							</div>
							<div class="stats">
								<h4>{{stockLevel.restockLevel}}</h4>
								<p>Restock Level (EA)</p>
							</div>
							<div class="stats">
								<h4>{{stockLevel.maxLevel}}</h4>
								<p>Max Level (EA)</p>
							</div>
						</div>
					</dl>
				</div>
				<div class="footer">
					<div class=" navigation-front">
						<button class="btn btn-simple rotateCard">
							<i class="fa fa-mail-forward"></i> See Details
                        </button>
					</div>
				</div>
			</div>
			<!-- end front panel -->

			<div class="back">
				<div class="header">
					<h5 class="motto">"To be or not to be, this is my awesome motto!"</h5>
				</div>
				<div class="content">
					<div class="main">
						<h4 class="text-center">Serviceable</h4>
						<!--<p class="text-center">Extra details here...</p>-->

						<div class="stats-container">
							<div class="stats">
								<h4>{{serviceable.available}}</h4>
								<p>Avail</p>
							</div>
							<div class="stats">
								<h4>{{serviceable.reserved}}</h4>
								<p>Resvd</p>
							</div>
							<div class="stats">
								<h4>{{serviceable.transferPending}}</h4>
								<p>Xfer Pend</p>
							</div>
							<div class="stats">
								<h4>{{serviceable.inKit}}</h4>
								<p>In Kit</p>
							</div>
						</div>
					</div>
				</div>
				<div class="footer">
					<button class="btn btn-simple rotateCard" rel="tooltip" title="Flip Card">
                    		<i class="fa fa-reply"></i> Back
                	</button>
				</div>
			</div>
			<!-- end back panel -->
		</div>
		<!-- end card -->
	</div>
	<!-- end card-container -->
</div>